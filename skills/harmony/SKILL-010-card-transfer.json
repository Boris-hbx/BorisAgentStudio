{
  "skill_id": "SKILL-010",
  "name": "card-transfer",
  "display_name": "UI 卡片格式转换",
  "version": "1.0.0",
  "description": "将 UI 卡片设计图转换为 Vue HTML 模板和结构化数据",
  "category": "harmony",
  "trigger": {
    "command": "/cardtransfer",
    "pattern": "^/cardtransfer\\s+(.+)$"
  },
  "input": {
    "type": "image",
    "description": "UI 卡片设计图（PNG/JPG）",
    "required": true
  },
  "output": {
    "format": "json",
    "schema": {
      "data": {
        "type": "object",
        "description": "从图片中提取的结构化数据"
      },
      "html": {
        "type": "string",
        "description": "生成的 Vue HTML 模板片段"
      }
    }
  },
  "constraints": {
    "style": {
      "description": "CSS 样式约束",
      "rules": [
        "所有 CSS 样式必须内联在 style 属性中",
        "禁止使用 flex-basis",
        "颜色必须使用 16 进制代码，禁止颜色名称",
        "禁止 z-index、position: absolute、flex-grow",
        "禁止 -webkit- 前缀属性"
      ]
    },
    "tags": {
      "description": "允许的 HTML 标签",
      "allowed": ["div", "span", "button", "img", "input", "textarea", "select"],
      "custom": ["toggle-custom", "symbolGlyph-custom", "divider-custom", "progress-custom", "stack-custom"],
      "rules": [
        "文本必须用 span 包裹",
        "图片必须用 img",
        "仅 div 可嵌套子元素",
        "div 内禁止直接文本"
      ]
    },
    "layout": {
      "description": "布局约束",
      "rules": [
        "所有 div 必须显式设置 display: flex 或 display: grid",
        "必须同时设置 flex-direction, justify-content, align-items",
        "宫格布局必须使用 display: grid",
        "撑满整行需设置 width: 100%"
      ]
    },
    "data_binding": {
      "description": "数据绑定规范",
      "rules": [
        "动态内容通过 Vue 数据绑定语法",
        "数据路径必须以 data. 开头",
        "禁止路径简化或扁平化",
        "数组元素必须封装为对象，禁止扁平数组"
      ]
    },
    "card": {
      "description": "卡片样式规范",
      "rules": [
        "最外层 div 必须设置 border-radius: 20px",
        "必须设置 overflow: hidden",
        "宽度使用百分比或具体 px",
        "高度使用具体 px 或 auto"
      ]
    }
  },
  "custom_components": {
    "toggle-custom": {
      "description": "开关组件",
      "usage": "<toggle-custom :value=\"...\" :href=\"\">",
      "props": ["value", "href"]
    },
    "symbolGlyph-custom": {
      "description": "SVG 图标组件",
      "usage": "<symbolGlyph-custom value=\"添加\" style=\"width:25px;height:25px;color:#999999\">",
      "supported_values": [
        "添加", "减少", "相册", "向左", "向右", "向上", "向下",
        "向左箭头", "向右箭头", "向上箭头", "向下箭头",
        "设置", "日历", "相机", "语音", "时钟", "电话", "图库",
        "复制", "删除", "清理", "确认", "取消", "喜欢", "不喜欢",
        "取消收藏", "收藏", "下载", "上传", "邮件", "文件夹",
        "添加文件", "标记点", "定位", "信息", "播放", "暂停",
        "停止", "上一首", "下一首", "刷新", "扫一扫", "放大镜",
        "加号放大镜", "减号放大镜", "分享", "声音", "静音",
        "点赞", "点踩", "发送", "升级", "更多", "放大", "缩小",
        "用户", "购物车", "应用", "应用市场", "AI优化", "AI记忆",
        "AI照相机", "AI影像", "AI铅笔", "AI屏幕", "AI文本",
        "魔杖", "AI声音", "AI语音", "人像", "保存"
      ]
    },
    "divider-custom": {
      "description": "分割线组件",
      "usage": "<divider-custom type=\"horizontal\" strokeWidth=2 style=\"color: #ffffff; margin: 0; width: 20px;\">",
      "props": {
        "type": ["horizontal", "vertical"],
        "strokeWidth": "number",
        "style": ["color", "width", "margin"]
      }
    },
    "progress-custom": {
      "description": "进度条组件",
      "usage": "<progress-custom value=20 total=30 type=\"line\" strokeWidth=2 style=\"...\">",
      "props": {
        "value": "number",
        "total": "number",
        "type": ["line", "circle"],
        "strokeWidth": "number",
        "style": ["color", "margin", "width"]
      }
    },
    "stack-custom": {
      "description": "堆叠容器组件（用于图片上叠加文字等）",
      "usage": "<stack-custom style=\"stack-alignment: center; width: 200px; height: 200px\">",
      "props": {
        "stack-alignment": [
          "top-start", "top", "top-end",
          "start", "center", "end",
          "bottom-start", "bottom", "bottom-end"
        ],
        "width": "required, px or %",
        "height": "required, px"
      }
    }
  },
  "examples": {
    "music_card": "data/harmonydata/card data/output/card_data/华为音乐.json",
    "sports_card": "data/harmonydata/card data/output/card_data/体育赛事.json",
    "express_card": "data/harmonydata/card data/output/card_data/快递元服务.json"
  },
  "created_at": "2026-01-28",
  "author": "Boris Team"
}
