{
  "skill_id": "SKILL-004",
  "name": "导出与分享",
  "version": "1.0",
  "description": "将 Session 数据导出为多种格式，支持分享和备份",
  "category": "data-management",
  "capabilities": [
    {
      "name": "export_json",
      "description": "JSON 格式导出",
      "features": [
        "完整 Session 数据",
        "兼容 STD-001 格式",
        "可重新导入"
      ],
      "mime_type": "application/json"
    },
    {
      "name": "export_markdown",
      "description": "Markdown 报告导出",
      "features": [
        "格式化执行摘要",
        "工具调用列表",
        "文件变更表格",
        "统计信息"
      ],
      "mime_type": "text/markdown"
    },
    {
      "name": "export_png",
      "description": "PNG 图片导出",
      "features": [
        "可视化截图",
        "高分辨率输出",
        "可自定义背景"
      ],
      "mime_type": "image/png"
    },
    {
      "name": "export_svg",
      "description": "SVG 矢量图导出",
      "features": [
        "无损缩放",
        "可编辑元素",
        "内联样式"
      ],
      "mime_type": "image/svg+xml"
    },
    {
      "name": "export_html",
      "description": "HTML 页面导出",
      "features": [
        "自包含页面",
        "无需外部依赖",
        "可离线查看"
      ],
      "mime_type": "text/html"
    },
    {
      "name": "clipboard",
      "description": "复制到剪贴板",
      "formats": ["json", "markdown"]
    }
  ],
  "export_options": {
    "scope": ["full", "view", "selection"],
    "include": [
      "tool_details",
      "input_output",
      "context_refs",
      "annotations"
    ],
    "image_scale": [1, 2, 3],
    "theme": ["dark", "light"]
  },
  "related_specs": ["SPEC-017"],
  "created_at": "2026-01-26",
  "author": "Boris Huai"
}
